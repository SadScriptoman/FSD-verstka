mixin radio-button(label, id, name, checked, classModifier)
    .radio-button(class=classModifier)
        if checked == 'checked'
            input(type="radio", id=id, name=name, checked).radio-button__input
        else
            input(type="radio", id=id, name=name).radio-button__input
        label(for=id).radio-button__label= label
