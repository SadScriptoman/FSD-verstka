mixin checkbox-list(label, classModifier)
    .checkbox-list.dropdown(class=classModifier)
        if label
            .checkbox-list__label.dropdown__toggler.cta-text= label
        else
            .checkbox-list__label.dropdown__toggler.cta-text no label
        .checkbox-list__icon.dropdown__icon.dropdown__icon_block
        .checkbox-list__content.dropdown__content
            if block
                block
            else
                p Нет контента!