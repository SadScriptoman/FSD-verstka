            label(for="chckbx") Можно курить

        .form-group.mt-30
            input(type="checkbox" id="radio" checked).radio-button
            label(for="radio") Можно курить
            
        .form-group.mt-30
            input(type="checkbox" id="toggle" checked).toggle
            label(for="toggle") Можно курить
        
        .form-group.mt-30
            button.like-button.like-button_liked.mr-10
                span.like-button__counter 12
            button.like-button        
                span.like-button__counter 1

        .rating.mt-30
            span.rating__star.rating__star_active
            span.rating__star.rating__star_active
            span.rating__star.rating__star_active
            span.rating__star.rating__star_active
            span.rating__star

        .pagination.mt-30
            a(href="#").pagination__arrow.pagination__arrow_prev
            a(href="#").pagination__link 1
            a(href="#").pagination__link.pagination__link_active 2
            a(href="#").pagination__link 3
            a(href="#").pagination__link ...
            a(href="#").pagination__link 15
