        .dropdown.mt-30.dropdown_collapsed
            .dropdown__field 2 спальни, 2 кроватnefbebg eiufuebfibe fhuebfu
            .dropdown__icon expand_more
            .dropdown__list 
                .dropdown__row
                    .dropdown__counter-label спальни
                    .counter
                        button.counter__handler.counter__handler_minus
                        input(type="number", name="count1", value='0', min='0' max='12', readonly).counter__input
                        button.counter__handler.counter__handler_plus
                .dropdown__row
                    .dropdown__counter-label кровати
                    .counter
                        button.counter__handler.counter__handler_minus
                        input(type="number", name="count1", value='0', min='0' max='12', readonly).counter__input
                        button.counter__handler.counter__handler_plus
                .dropdown__row
                    .dropdown__counter-label ванные
                    .counter
                        button.counter__handler.counter__handler_minus
                        input(type="number", name="count1", value='0', min='0' max='12', readonly).counter__input
                        button.counter__handler.counter__handler_plus
                .dropdown__buttons
                    button.dropdown__button.dropdown__button_secondary Очистить
                    button.dropdown__button Применить
        
