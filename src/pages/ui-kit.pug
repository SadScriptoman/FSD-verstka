                if text == "UI-KIT"
                    +mixin(text)
                    div #{i++}
                else
                    +mixin("ТЕКСТ НЕПРАВИЛЬНЫЙ")
                    div #{i++}
        button.button.button_block Подобрать номер
            span.button__icon arrow_forward

        .form-group.mt-30
            span.form-group__label Text field
